{% extends '../master' %}
{% set page = 'All Releases' %}

{% block content %}
<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover table-bordered">
      <thead>
        <th>ID</th>
        <th>Version</th>
        <th>File Path</th>
        <th>Actions</th>
      </thead>
      <tbody>
        {% for release in releases %}
          <tr>
            <td>{{ release.id }}</td>
            <td>{{ release.version }}</td>
            <td>{{ release.file }}</td>
            <td>
              <a href="{{ 'releases:edit:get' | route({ id: release.id }) }}" class="btn btn-warning">Edit</a>
              <a href="{{ 'releases:delete' | route({ id: release.id }) }}" class="btn btn-danger release-delete-button">Delete</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
