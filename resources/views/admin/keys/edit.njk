{% extends '../master' %}
{% set page = 'Edit Key' %}

{% block content %}
  <div class="row">
    <div class="col-lg-6">
      <form action="/admin/keys/edit" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" class="form-control" name="name" value="{{ key.name | first }}">
        </div>
        <div class="form-group">
          <label for="aliases">Aliases</label>
          <textarea name="aliases" id="aliases" class="form-control" cols="30" rows="10">
            {{- key.names | trim -}}
          </textarea>
        </div>
        <div class="form-group">
          <label for="ips">IPS</label>
          <textarea name="ips" id="ips" class="form-control" cols="30" rows="10">
            {{- key.ips | join('\n') -}}
          </textarea>
        </div>

        <div class="form-group clearfix">
          <div class="pull-right">
            <input type="submit" class="btn btn-success" value="Save">
          </div>
        </div>

        <input type="hidden" name="id" value="{{ key.id }}">

        {{ csrfField }}
      </form>
    </div>
  </div>
{% endblock %}
